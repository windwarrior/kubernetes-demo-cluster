{
  "kind": "ReplicationController",
  "apiVersion": "v1",
  "metadata": {
    "name": "ails-server",
    "creationTimestamp": null,
    "labels": {
      "name": "ails-server"
    }
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "name": "ails-server"
    },
    "template": {
      "metadata": {
        "creationTimestamp": null,
        "labels": {
          "name": "ails-server"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "ails-server-container",
            "image": "inaetics/felix-agent",
            "args": [
              "/tmp/node-agent.sh",
              "felix_1"
            ],
            "ports": [
              {
                "hostPort": 8080,
                "containerPort": 8081,
                "protocol": "TCP"
              }
            ],
            "env": [
              {
                "name": "ETCDCTL_PEERS",
                "value": "172.17.8.20:2379"
              },
              {
                "name": "HOSTPORT",
                "value": "8080"
              }
            ],
            "resources": {},
            "terminationMessagePath": "/dev/termination-log",
            "imagePullPolicy": "IfNotPresent",
            "livenessProbe": {
              "exec" : {
                "command" : [
                  "cat",
                  "/tmp/health"
                ],
                "initialDelaySeconds": 10,
                "timeoutSeconds": 10
              }
            }
          }
        ],
        "restartPolicy": "Always",
        "dnsPolicy": "ClusterFirst"
      }
    }
  },
  "status": {
    "replicas": 0
  }
}
